<launch>
    <!-- webots -->
    <arg name="no_gui" default="false" doc="Start Webots with minimal GUI" />
    <include file="$(find webots_ros)/launch/webots.launch">
        <arg name="mode" value="realtime" />
        <arg name="no_gui" value="$(arg no_gui)" />
        <arg name="world" value="$(find tr_drive)/simulations/car_wbt/car_wbt.wbt" />
    </include>

    <!-- car -->
    <group ns="car">
        <!-- robot state publisher -->
        <node pkg="robot_state_publisher" type="robot_state_publisher" name="car_state_publisher" respawn="true" respawn_delay="5" />

        <!-- ackermann steering controller -->
        <node pkg="tr_drive" type="car_wbt_controller_node.py" name="car_wbt_controller" output="screen" />
    </group>

    <!-- rviz -->
    <arg name="rviz" default="true" />
    <arg name="rviz_config" default="$(find tr_drive)/rviz/car_wbt.rviz" />
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rviz_config)" if="$(arg rviz)" />
</launch>
